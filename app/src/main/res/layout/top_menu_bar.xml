<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#caca"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imMenu"
        android:src="@drawable/_menu"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:onClick="ClickMenuImages"
        android:scaleType="matrix"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title App"
        android:id="@+id/txTitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imMenu"
        android:layout_alignBottom="@id/imMenu"
        android:layout_marginBottom="10dp"

        />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imSettings"
        android:src="@drawable/_settings"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imSearch"
        android:src="@drawable/_search"
        android:layout_toLeftOf="@id/imSettings"

        />


</RelativeLayout>